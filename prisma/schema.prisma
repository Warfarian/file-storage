generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Session {
  id        String   @id @default(cuid())
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id       String   @id @unique
  username String   @unique
  email    String   @unique
  password String
  folders  Folder[] 
}

model Folder {
  folderId      Int      @id @unique @default(autoincrement())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  parentFolderId Int?    
  createdAt     DateTime    
  folderName      String?
  parentFolder  Folder?  @relation("FolderParent", fields: [parentFolderId], references: [folderId], onDelete: Cascade) 
  childFolders  Folder[] @relation("FolderParent") 
  files         File[] 
  @@index([userId, parentFolderId]) 
}

model File {
  fileId   Int      @id @unique
  fileURL String
  folderId Int
  size     Int
  folder   Folder   @relation(fields: [folderId], references: [folderId])

  @@index([folderId]) 
}
